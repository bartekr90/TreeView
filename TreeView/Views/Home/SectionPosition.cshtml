@model TreeView.Models.Section

@{
    ViewBag.Title = "Dodawanie kategorii";
}

<h2>Dodawanie kategorii</h2>

@using (Html.BeginForm("SectionPosition", "Home"))
{

    @Html.HiddenFor(x => x.SectionId)
    @Html.HiddenFor(x => x.ParentSecId)

    <div class="form-group">
        @Html.LabelFor(x => x.SectionName)
        @Html.TextBoxFor(x => x.SectionName,
            new { @class = "form-control", autofocus = "autofocus" })

    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.NavUrl)
        @Html.TextBoxFor(x => x.NavUrl,
            new { @class = "form-control" })

    </div>


    <button type="submit" class="btn btn-primary btn-lg mb-5">
        Zapisz
    </button>

}
